<h1>Codeial / <%=title%></h1>


<!------------  Content Field  ------------>
<section id="feed-posts"> 
    <h4>Post</h4>
    <% if(locals.user) {%>
        <form action="/posts/create" id="new-post-form" method="POST" required>
            <textarea name="content" cols="30" rows="3" placeholder="Type your text"></textarea>
            <input type="submit" value="Post">
        </form>
    <%}%>
    
    <div id="posts-list">
        <ul>
            <% for(post of posts) {%>
                <%- include('_post') -%>
            <%}%>
        </ul>
    </div>
</section>

